<h1>My Tasks</h1>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary" %>

<table class="table mt-3">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Due Date</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.status %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to 'Show', task_path(task), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning btn-sm" %></td>
        <td><%= button_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
